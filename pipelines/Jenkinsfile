// Jenkins Pipeline for Terraform Infrastructure Deployment
// Supports multiple environments and cloud providers

pipeline {
    agent any
    
    parameters {
        choice(
            name: 'ENVIRONMENT',
            choices: ['dev', 'staging', 'prod'],
            description: 'Select deployment environment'
        )
        choice(
            name: 'CLOUD_PROVIDER',
            choices: ['azure', 'aws', 'both'],
            description: 'Select cloud provider'
        )
        choice(
            name: 'ACTION',
            choices: ['plan', 'apply', 'destroy'],
            description: 'Terraform action to perform'
        )
        booleanParam(
            name: 'AUTO_APPROVE',
            defaultValue: false,
            description: 'Auto-approve terraform apply (use with caution)'
        )
    }
    
    environment {
        TF_VERSION = '1.5.0'
        TF_IN_AUTOMATION = 'true'
        TF_LOG = 'INFO'
        
        // Azure credentials from Jenkins credentials store
        ARM_CLIENT_ID = credentials('azure-client-id')
        ARM_CLIENT_SECRET = credentials('azure-client-secret')
        ARM_SUBSCRIPTION_ID = credentials('azure-subscription-id')
        ARM_TENANT_ID = credentials('azure-tenant-id')
        
        // AWS credentials (for future use)
        AWS_ACCESS_KEY_ID = credentials('aws-access-key-id')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo " Checking out code..."
                checkout scm
            }
        }
        
        stage('Validate Parameters') {
            steps {
                script {
                    echo " Environment: ${params.ENVIRONMENT}"
                    echo "  Cloud Provider: ${params.CLOUD_PROVIDER}"
                    echo "  Action: ${params.ACTION}"
                    
                    if (params.ACTION == 'destroy' && params.ENVIRONMENT == 'prod') {
                        error(' Destroying production infrastructure requires manual approval')
                    }
                }
            }
        }
        
        stage('Setup Terraform') {
            steps {
                script {
                    echo " Setting up Terraform..."
                    sh """
                        if ! command -v terraform &> /dev/null; then
                            wget https://releases.hashicorp.com/terraform/${TF_VERSION}/terraform_${TF_VERSION}_linux_amd64.zip
                            unzip terraform_${TF_VERSION}_linux_amd64.zip
                            sudo mv terraform /usr/local/bin/
                        fi
                        terraform version
                    """
                }
            }
        }
        
        stage('Terraform Init') {
            steps {
                dir("terraform-infrastructure/environments/${params.ENVIRONMENT}") {
                    echo " Initializing Terraform..."
                    sh """
                        terraform init -upgrade
                    """
                }
            }
        }
        
        stage('Terraform Validate') {
            steps {
                dir("terraform-infrastructure/environments/${params.ENVIRONMENT}") {
                    echo "Validating Terraform configuration..."
                    sh """
                        terraform validate
                    """
                }
            }
        }
        
        stage('Terraform Plan') {
            when {
                expression { params.ACTION in ['plan', 'apply'] }
            }
            steps {
                dir("terraform-infrastructure/environments/${params.ENVIRONMENT}") {
                    script {
                        echo "Planning Terraform changes..."
                        
                        def enableAzure = params.CLOUD_PROVIDER in ['azure', 'both']
                        def enableAws = params.CLOUD_PROVIDER in ['aws', 'both']
                        
                        sh """
                            terraform plan \
                                -var='enable_azure=${enableAzure}' \
                                -var='enable_aws=${enableAws}' \
                                -var-file=terraform.tfvars \
                                -out=tfplan
                        """
                        
                        // Archive the plan
                        archiveArtifacts artifacts: 'tfplan', fingerprint: true
                    }
                }
            }
        }
        
        stage('Terraform Apply') {
            when {
                expression { params.ACTION == 'apply' }
            }
            steps {
                dir("terraform-infrastructure/environments/${params.ENVIRONMENT}") {
                    script {
                        if (params.AUTO_APPROVE) {
                            echo " Applying Terraform changes (auto-approved)..."
                            sh """
                                terraform apply -auto-approve tfplan
                            """
                        } else {
                            echo " Waiting for manual approval..."
                            input message: 'Approve terraform apply?', ok: 'Apply'
                            
                            echo " Applying Terraform changes..."
                            sh """
                                terraform apply tfplan
                            """
                        }
                    }
                }
            }
        }
        
        stage('Terraform Destroy') {
            when {
                expression { params.ACTION == 'destroy' }
            }
            steps {
                dir("terraform-infrastructure/environments/${params.ENVIRONMENT}") {
                    script {
                        echo " WARNING: Destroying infrastructure..."
                        
                        if (params.ENVIRONMENT == 'prod') {
                            input message: 'Are you ABSOLUTELY SURE you want to destroy PRODUCTION?', ok: 'Yes, Destroy'
                        }
                        
                        def enableAzure = params.CLOUD_PROVIDER in ['azure', 'both']
                        def enableAws = params.CLOUD_PROVIDER in ['aws', 'both']
                        
                        sh """
                            terraform destroy \
                                -var='enable_azure=${enableAzure}' \
                                -var='enable_aws=${enableAws}' \
                                -var-file=terraform.tfvars \
                                -auto-approve
                        """
                    }
                }
            }
        }
        
        stage('Terraform Output') {
            when {
                expression { params.ACTION in ['apply'] }
            }
            steps {
                dir("terraform-infrastructure/environments/${params.ENVIRONMENT}") {
                    echo "Terraform outputs..."
                    sh """
                        terraform output
                    """
                }
            }
        }
    }
    
    post {
        success {
            echo " Pipeline completed successfully!"
            script {
                if (params.ACTION == 'apply') {
                    dir("terraform-infrastructure/environments/${params.ENVIRONMENT}") {
                        def outputs = sh(
                            script: "terraform output -json",
                            returnStdout: true
                        ).trim()
                        
                        echo " Deployment Outputs:\n${outputs}"
                    }
                }
            }
        }
        failure {
            echo " Pipeline failed!"
        }
        always {
            echo " Cleaning up..."
            cleanWs()
        }
    }
}
